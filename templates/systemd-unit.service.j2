[Unit]
Description={{ tomee_dirname }} - %i
After=syslog.target network.target

[Service]
Type=forking

User={{ tomee_owner }}
Group={{ tomee_group }}

Environment="CATALINA_HOME={{ catalina_home }}"
Environment="CATALINA_BASE={{ catalina_home }}/jvms/%i"
Environment="CATALINA_PID={{ catalina_home }}/jvms/%i.pid"
ExecStart={{ catalina_home }}/bin/startup.sh
ExecStop={{ catalina_home }}/bin/shutdown.sh

#RestartSec=30
#Restart=always

[Install]
WantedBy=multi-user.target
